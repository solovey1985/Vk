<av:Page x:Class="VkGUI.View.Pages.FriendsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:av="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      x:Name="MyFriendsPage"
         
      xmlns:view="clr-namespace:Vk.GUI.View.Pages"   
      xmlns:viewModel ="clr-namespace:Vk.GUI.ViewModel" 
         
      DataContext="{Binding ViewModel, ElementName=MyFriendsPage}"
      mc:Ignorable="d" 
         
      d:DesignHeight="300" d:DesignWidth="300"
	       Title="Friends"
        KeepAlive="False">
<!-- ! -->    
    <Page.Resources>
        <DataTemplate DataType="{x:Type viewModel:FriendsOnlineVM}">
            <view:UC_Friend/>
        </DataTemplate>        
    </Page.Resources>
    
   <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
   <!-- <ContentPresenter Grid.Row="1" x:Name="Friend" /> -->
           <Label><Hyperlink NavigateUri="MainPage.xaml">Главная</Hyperlink></Label>
            <Label>
                <Hyperlink NavigateUri="MessagesPage.xaml">Messages</Hyperlink>
            </Label>
            <Label>
                <Hyperlink NavigateUri="AudiosPage.xaml">Audio</Hyperlink>
            </Label>
         
    
    
    <StackPanel Grid.Column="1">
            <!-- ! -->
            <TabControl 
                    HorizontalAlignment="Stretch" 
                    Name="Tabs" 
                    VerticalAlignment="Stretch"
                   
                   
            
            >
                <!-- ! -->
                <TabItem Height="20" Header="Online" Name="FriendsOnlineTab" Content="{Binding Path=FriendsOnlineVM}"/>
                <TabItem Height="20" Header="Friends" Name="AllFriendsTab" Content="{Binding Path=FriendsOnlineVM}"/>

            </TabControl>

        </StackPanel>
    </Grid>
</av:Page>
